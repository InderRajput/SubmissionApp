<% provide(:title, "Home Page")%>
<% if !@submissions.empty? %>
    <center><h2>Submission Report</h2></center>
    <center><%= link_to "Submission Profile", "#submission_modal", "data-toggle" => "modal", class: "btn btn-primary" %></center>
    <div class="modal fade" id = "submission_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong><center><h4 class="modal-title" id="myModalLabel">Submission Format</h4></center></strong>
          </div>
          <div class="modal-body">
            <%= render 'forms/user_submission_form' %>
          </div>
        </div>
      </div>
    </div>

    <%= render "users" %>
<% else %>
    <div class="jumbotron">
      <div class="container">
        <div class="row well well-lg">
          <div class="col-md-6 col-md-offset-1">
            <h1 class="">Seems this is your first visit !! </h1>
            <p><h2>Please submit your first profile </h2></p><%= link_to "Submission Profile", "#submission_modal", "data-toggle" => "modal", class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>

    <div class="modal fade" id = "submission_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong><center><h4 class="modal-title" id="myModalLabel">Submission Format</h4></center></strong>
          </div>
          <div class="modal-body">
            <%= render 'forms/user_submission_form' %>
          </div>
        </div>
      </div>
    </div>
<% end %>