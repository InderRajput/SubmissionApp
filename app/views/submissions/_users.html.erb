
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover table-centered">
      <thead>
      <tr>
        <td colspan="2">
          <form>
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Search" name="q">
              <div class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
              </div>
            </div>
          </form></td></tr>
      <tr class="danger">
        <th>Name</th> <th>Skill</th> <th>Email</th> <th>Phone</th> <th>Location</th> <th>Rate</th> <th>Availability</th> <th>Relocation</th> <th>Visa</th>
      </tr>
      </thead>

      <tbody>
      <% @submissions.each do |submission| %>
          <tr class="success">
            <td><%= best_in_place submission, :name %></td>
            <td><%= best_in_place submission, :skill, tabindex: "1" %></td>
            <td><%= best_in_place submission, :email %></td>
            <td><%= best_in_place submission, :phone %></td>
            <td><%= best_in_place submission, :location %></td>
            <td><%= best_in_place submission, :rate %></td>
            <td><%= best_in_place submission, :availability %></td>
            <td><%= best_in_place submission, :relocation %></td>
            <td><%= best_in_place submission, :visa %></td>
            <td>
              <%= link_to 'Destroy', submission, class: "btn btn-xs btn-danger", method: :delete,remote: true,class: "delete_submission", data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
